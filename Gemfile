source "https://rubygems.org"

# 核心 Jekyll 依赖（使用较新的兼容版本）
gem "jekyll", "~> 4.4.3"

# 必要插件（根据你的博客功能选择，删除不需要的）
gem "jekyll-sitemap", "~> 1.4.0"  # 站点地图
gem "jekyll-feed", "~> 0.17.0"    # RSS 订阅
gem "jekyll-seo-tag", "~> 2.8.0"  # SEO 优化
gem "jekyll-paginate", "~> 1.1.0" # 分页功能（如果用到）

# 处理 Sass 编译（解决之前的 @import 警告）
gem "jekyll-sass-converter", "~> 2.0"  # 兼容 Dart Sass 的版本